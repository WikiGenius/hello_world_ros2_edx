<?xml version="1.0"?>
<robot name="break_beam" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="prefix" default="break_beam_"/>
  <xacro:arg name="parent" default="world"/>

  <!-- URDF -->
  <xacro:include filename="$(find hrwros_support)/urdf/break_beam/break_beam.urdf.xacro"/>
  <xacro:break_beam_urdf prefix="$(arg prefix)" parent="$(arg parent)"/>

  <!-- Gazebo -->
  <xacro:include filename="$(find hrwros_support)/urdf/break_beam/break_beam.gazebo.xacro"/>
  <xacro:break_beam_gazebo prefix="$(arg prefix)" parent="$(arg parent)"/>

</robot>
